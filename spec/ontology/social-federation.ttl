@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix as: <https://www.w3.org/ns/activitystreams#> .
@prefix ldp: <http://www.w3.org/ns/ldp#> .
@prefix acl: <http://www.w3.org/ns/auth/acl#> .
@prefix acg: <https://agentcontextgraph.dev/ontology#> .
@prefix fed: <https://agentcontextgraph.dev/federation#> .
@prefix pb: <https://agentcontextgraph.dev/personal-broker#> .
@prefix id: <https://agentcontextgraph.dev/identity#> .
@prefix soc: <https://agentcontextgraph.dev/social#> .

# =============================================================================
# Agent Context Graph Social Federation Protocol Ontology
# =============================================================================
# Defines the Social Federation Protocol - how users connect, discover, share,
# and collaborate through their personal brokers. Enables social graph
# construction, multiplayer agent workflows, and federated AI experiences.
# =============================================================================

<https://agentcontextgraph.dev/social>
    a owl:Ontology ;
    owl:versionIRI <https://agentcontextgraph.dev/social/1.0.0> ;
    dcterms:title "Agent Context Graph Social Federation Protocol Ontology"@en ;
    dcterms:description "Defines the Social Federation Protocol for connecting users through their personal brokers. Enables social discovery, relationship management, collaborative workflows, and federated AI experiences."@en ;
    dcterms:created "2026-01-25"^^xsd:date ;
    owl:imports <https://agentcontextgraph.dev/personal-broker> ;
    owl:imports <https://agentcontextgraph.dev/federation> ;
    owl:imports <https://www.w3.org/ns/activitystreams#> .

# =============================================================================
# Social Connection Classes
# =============================================================================

# -----------------------------------------------------------------------------
# SocialConnection - A federation link between two personal brokers
# -----------------------------------------------------------------------------

soc:SocialConnection a owl:Class ;
    rdfs:label "Social Connection"@en ;
    rdfs:subClassOf fed:TrustRelationship ;
    rdfs:comment "A social connection between two personal brokers, enabling federated communication, shared contexts, and collaborative workflows. Bi-directional when both parties accept."@en ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty soc:fromBroker ;
        owl:cardinality 1
    ] ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty soc:toBroker ;
        owl:cardinality 1
    ] .

soc:ConnectionState a owl:Class ;
    rdfs:label "Connection State"@en ;
    owl:oneOf (soc:ConnectionRequested soc:ConnectionAccepted soc:ConnectionRejected
               soc:ConnectionBlocked soc:ConnectionMuted soc:ConnectionRemoved) .

soc:ConnectionRequested a soc:ConnectionState ;
    rdfs:label "Requested"@en ;
    rdfs:comment "Connection request has been sent, awaiting response."@en .

soc:ConnectionAccepted a soc:ConnectionState ;
    rdfs:label "Accepted"@en ;
    rdfs:comment "Both parties have accepted the connection."@en .

soc:ConnectionRejected a soc:ConnectionState ;
    rdfs:label "Rejected"@en ;
    rdfs:comment "Connection request was rejected."@en .

soc:ConnectionBlocked a soc:ConnectionState ;
    rdfs:label "Blocked"@en ;
    rdfs:comment "Connection has been blocked."@en .

soc:ConnectionMuted a soc:ConnectionState ;
    rdfs:label "Muted"@en ;
    rdfs:comment "Connection is muted (no notifications)."@en .

soc:ConnectionRemoved a soc:ConnectionState ;
    rdfs:label "Removed"@en ;
    rdfs:comment "Connection has been removed."@en .

# -----------------------------------------------------------------------------
# ConnectionRequest - ActivityPub-style connection request
# -----------------------------------------------------------------------------

soc:ConnectionRequest a owl:Class ;
    rdfs:label "Connection Request"@en ;
    rdfs:subClassOf as:Follow ;
    rdfs:comment "A request to establish a social connection. Similar to ActivityPub Follow but includes ACG-specific metadata like desired trust level and permissions."@en .

soc:ConnectionResponse a owl:Class ;
    rdfs:label "Connection Response"@en ;
    rdfs:subClassOf as:Activity ;
    rdfs:comment "A response to a connection request."@en .

soc:AcceptConnection a owl:Class ;
    rdfs:label "Accept Connection"@en ;
    rdfs:subClassOf soc:ConnectionResponse, as:Accept ;
    rdfs:comment "Acceptance of a connection request."@en .

soc:RejectConnection a owl:Class ;
    rdfs:label "Reject Connection"@en ;
    rdfs:subClassOf soc:ConnectionResponse, as:Reject ;
    rdfs:comment "Rejection of a connection request."@en .

# -----------------------------------------------------------------------------
# SocialProfile - Public profile shared with connections
# -----------------------------------------------------------------------------

soc:SocialProfile a owl:Class ;
    rdfs:label "Social Profile"@en ;
    rdfs:subClassOf as:Profile ;
    rdfs:comment "A public-facing social profile for a personal broker. Contains information the user chooses to share with connections."@en .

soc:ProfileVisibility a owl:Class ;
    rdfs:label "Profile Visibility"@en ;
    owl:oneOf (soc:VisibilityPublic soc:VisibilityConnections soc:VisibilityClose soc:VisibilityPrivate) .

soc:VisibilityPublic a soc:ProfileVisibility ;
    rdfs:label "Public"@en ;
    rdfs:comment "Visible to anyone who can discover the broker."@en .

soc:VisibilityConnections a soc:ProfileVisibility ;
    rdfs:label "Connections Only"@en ;
    rdfs:comment "Visible only to accepted connections."@en .

soc:VisibilityClose a soc:ProfileVisibility ;
    rdfs:label "Close Connections"@en ;
    rdfs:comment "Visible only to close/trusted connections."@en .

soc:VisibilityPrivate a soc:ProfileVisibility ;
    rdfs:label "Private"@en ;
    rdfs:comment "Not visible to others."@en .

# =============================================================================
# Social Discovery Classes
# =============================================================================

# -----------------------------------------------------------------------------
# DiscoveryMethod - How users find each other
# -----------------------------------------------------------------------------

soc:DiscoveryMethod a owl:Class ;
    rdfs:label "Discovery Method"@en ;
    rdfs:comment "A method for discovering other personal brokers."@en ;
    owl:oneOf (soc:DIDDiscovery soc:WebIDDiscovery soc:QRCodeDiscovery
               soc:InviteLinkDiscovery soc:DirectoryDiscovery
               soc:ContactSyncDiscovery soc:MutualConnectionDiscovery) .

soc:DIDDiscovery a soc:DiscoveryMethod ;
    rdfs:label "DID Discovery"@en ;
    rdfs:comment "Discover via Decentralized Identifier lookup."@en .

soc:WebIDDiscovery a soc:DiscoveryMethod ;
    rdfs:label "WebID Discovery"@en ;
    rdfs:comment "Discover via WebID URL."@en .

soc:QRCodeDiscovery a soc:DiscoveryMethod ;
    rdfs:label "QR Code Discovery"@en ;
    rdfs:comment "Discover by scanning a QR code."@en .

soc:InviteLinkDiscovery a soc:DiscoveryMethod ;
    rdfs:label "Invite Link Discovery"@en ;
    rdfs:comment "Discover via a shared invite link."@en .

soc:DirectoryDiscovery a soc:DiscoveryMethod ;
    rdfs:label "Directory Discovery"@en ;
    rdfs:comment "Discover via a public directory service."@en .

soc:ContactSyncDiscovery a soc:DiscoveryMethod ;
    rdfs:label "Contact Sync Discovery"@en ;
    rdfs:comment "Discover from synced contact list (phone, email)."@en .

soc:MutualConnectionDiscovery a soc:DiscoveryMethod ;
    rdfs:label "Mutual Connection Discovery"@en ;
    rdfs:comment "Discover through mutual connections."@en .

# -----------------------------------------------------------------------------
# InviteLink - Shareable invitation to connect
# -----------------------------------------------------------------------------

soc:InviteLink a owl:Class ;
    rdfs:label "Invite Link"@en ;
    rdfs:comment "A shareable link that allows someone to connect to a personal broker."@en .

soc:InviteLinkType a owl:Class ;
    rdfs:label "Invite Link Type"@en ;
    owl:oneOf (soc:SingleUseInvite soc:MultiUseInvite soc:TimeLimitedInvite soc:GroupInvite) .

soc:SingleUseInvite a soc:InviteLinkType ;
    rdfs:label "Single Use"@en ;
    rdfs:comment "Can only be used once."@en .

soc:MultiUseInvite a soc:InviteLinkType ;
    rdfs:label "Multi Use"@en ;
    rdfs:comment "Can be used multiple times."@en .

soc:TimeLimitedInvite a soc:InviteLinkType ;
    rdfs:label "Time Limited"@en ;
    rdfs:comment "Valid only for a limited time."@en .

soc:GroupInvite a soc:InviteLinkType ;
    rdfs:label "Group Invite"@en ;
    rdfs:comment "Invitation to join a group."@en .

# =============================================================================
# Social Interaction Classes
# =============================================================================

# -----------------------------------------------------------------------------
# SocialMessage - Message between connected brokers
# -----------------------------------------------------------------------------

soc:SocialMessage a owl:Class ;
    rdfs:label "Social Message"@en ;
    rdfs:subClassOf pb:Message, as:Note ;
    rdfs:comment "A message sent between social connections. Federated via ActivityPub or DIDComm."@en .

# -----------------------------------------------------------------------------
# Presence - Online presence/availability
# -----------------------------------------------------------------------------

soc:Presence a owl:Class ;
    rdfs:label "Presence"@en ;
    rdfs:comment "Online presence information for a personal broker."@en .

soc:PresenceStatus a owl:Class ;
    rdfs:label "Presence Status"@en ;
    owl:oneOf (soc:PresenceOnline soc:PresenceAway soc:PresenceBusy
               soc:PresenceDoNotDisturb soc:PresenceOffline soc:PresenceInvisible) .

soc:PresenceOnline a soc:PresenceStatus ;
    rdfs:label "Online"@en .

soc:PresenceAway a soc:PresenceStatus ;
    rdfs:label "Away"@en .

soc:PresenceBusy a soc:PresenceStatus ;
    rdfs:label "Busy"@en .

soc:PresenceDoNotDisturb a soc:PresenceStatus ;
    rdfs:label "Do Not Disturb"@en .

soc:PresenceOffline a soc:PresenceStatus ;
    rdfs:label "Offline"@en .

soc:PresenceInvisible a soc:PresenceStatus ;
    rdfs:label "Invisible"@en .

# -----------------------------------------------------------------------------
# Notification - Social notifications
# -----------------------------------------------------------------------------

soc:Notification a owl:Class ;
    rdfs:label "Notification"@en ;
    rdfs:subClassOf as:Activity ;
    rdfs:comment "A notification to inform the user about social activity."@en .

soc:NotificationType a owl:Class ;
    rdfs:label "Notification Type"@en ;
    owl:oneOf (soc:ConnectionRequestNotification soc:ConnectionAcceptedNotification
               soc:MessageNotification soc:MentionNotification
               soc:WorkflowInviteNotification soc:WorkflowUpdateNotification
               soc:GroupInviteNotification soc:SystemNotification) .

# =============================================================================
# Collaborative Workflow Classes
# =============================================================================

# -----------------------------------------------------------------------------
# CollaborativeContext - Shared context between connections
# -----------------------------------------------------------------------------

soc:CollaborativeContext a owl:Class ;
    rdfs:label "Collaborative Context"@en ;
    rdfs:subClassOf acg:ContextGraph ;
    rdfs:comment "A context graph shared between multiple connected brokers for collaborative work. Access controlled via WebACL."@en .

soc:CollaborationPermission a owl:Class ;
    rdfs:label "Collaboration Permission"@en ;
    rdfs:comment "A permission level for collaborative contexts."@en ;
    owl:oneOf (soc:PermissionView soc:PermissionSuggest soc:PermissionContribute
               soc:PermissionEdit soc:PermissionAdmin) .

soc:PermissionView a soc:CollaborationPermission ;
    rdfs:label "View"@en ;
    rdfs:comment "Can view the context but not modify."@en .

soc:PermissionSuggest a soc:CollaborationPermission ;
    rdfs:label "Suggest"@en ;
    rdfs:comment "Can suggest changes for approval."@en .

soc:PermissionContribute a soc:CollaborationPermission ;
    rdfs:label "Contribute"@en ;
    rdfs:comment "Can add to the context."@en .

soc:PermissionEdit a soc:CollaborationPermission ;
    rdfs:label "Edit"@en ;
    rdfs:comment "Can edit existing content."@en .

soc:PermissionAdmin a soc:CollaborationPermission ;
    rdfs:label "Admin"@en ;
    rdfs:comment "Full administrative control."@en .

# -----------------------------------------------------------------------------
# WorkflowInvitation - Invite to join a workflow
# -----------------------------------------------------------------------------

soc:WorkflowInvitation a owl:Class ;
    rdfs:label "Workflow Invitation"@en ;
    rdfs:subClassOf as:Invite ;
    rdfs:comment "An invitation for a connection to participate in a workflow."@en .

soc:InvitationResponse a owl:Class ;
    rdfs:label "Invitation Response"@en ;
    rdfs:subClassOf as:Activity ;
    rdfs:comment "Response to a workflow invitation."@en .

# -----------------------------------------------------------------------------
# SocialGroup - Group of connected users
# -----------------------------------------------------------------------------

soc:SocialGroup a owl:Class ;
    rdfs:label "Social Group"@en ;
    rdfs:subClassOf as:Group, pb:Group ;
    rdfs:comment "A group of connected users who can collaborate on shared contexts and workflows."@en .

soc:GroupRole a owl:Class ;
    rdfs:label "Group Role"@en ;
    owl:oneOf (soc:GroupOwner soc:GroupAdmin soc:GroupModerator soc:GroupMember soc:GroupGuest) .

soc:GroupOwner a soc:GroupRole ;
    rdfs:label "Owner"@en ;
    rdfs:comment "Created the group, has full control."@en .

soc:GroupAdmin a soc:GroupRole ;
    rdfs:label "Admin"@en ;
    rdfs:comment "Can manage group settings and members."@en .

soc:GroupModerator a soc:GroupRole ;
    rdfs:label "Moderator"@en ;
    rdfs:comment "Can moderate content and interactions."@en .

soc:GroupMember a soc:GroupRole ;
    rdfs:label "Member"@en ;
    rdfs:comment "Standard group member."@en .

soc:GroupGuest a soc:GroupRole ;
    rdfs:label "Guest"@en ;
    rdfs:comment "Limited access guest."@en .

# =============================================================================
# Federation Protocol Classes
# =============================================================================

# -----------------------------------------------------------------------------
# FederationMessage - Protocol message between brokers
# -----------------------------------------------------------------------------

soc:FederationMessage a owl:Class ;
    rdfs:label "Federation Message"@en ;
    rdfs:subClassOf as:Activity ;
    rdfs:comment "A protocol-level message for federation between personal brokers."@en .

soc:FederationProtocol a owl:Class ;
    rdfs:label "Social Federation Protocol"@en ;
    rdfs:comment "The protocol used for social federation."@en ;
    owl:oneOf (soc:ActivityPubProtocol soc:DIDCommProtocol soc:ATProtocol soc:NativeACGProtocol) .

soc:ActivityPubProtocol a soc:FederationProtocol ;
    rdfs:label "ActivityPub"@en ;
    rdfs:comment "W3C ActivityPub for broad fediverse compatibility."@en .

soc:DIDCommProtocol a soc:FederationProtocol ;
    rdfs:label "DIDComm"@en ;
    rdfs:comment "DIDComm for encrypted peer-to-peer messaging."@en .

soc:ATProtocol a soc:FederationProtocol ;
    rdfs:label "AT Protocol"@en ;
    rdfs:comment "Bluesky AT Protocol for portable social data."@en .

soc:NativeACGProtocol a soc:FederationProtocol ;
    rdfs:label "Native ACG"@en ;
    rdfs:comment "Native ACG federation protocol for full feature support."@en .

